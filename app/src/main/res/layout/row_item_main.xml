<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rih_view_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rim_layout_margin"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rih_api_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rim_height_image"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/rih_api_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/rim_padding"
            android:textSize="@dimen/rim_text_big"
            android:textStyle="bold"
            tools:text="Text" />

        <TextView
            android:id="@+id/rih_api_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/rim_padding"
            android:paddingEnd="@dimen/rim_padding"
            android:paddingStart="@dimen/rim_padding"
            android:textSize="@dimen/rim_text_normal"
            tools:text="Text" />

    </LinearLayout>

</android.support.v7.widget.CardView>